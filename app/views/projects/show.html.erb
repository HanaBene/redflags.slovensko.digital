<% content_for(:title) do %><%= @project.title %> &middot; Red Flags &middot; Slovensko.Digital<% end %>
<div id="project-show" class="container main">
  <div class="row mt-5 mb-5">
    <div class="col-md-4 text-md-right mb-2 order-md-12">
      <div class="d-inline-block">
        <div class="total-score"><%= number_to_percentage(@project.total_score_percentage, precision: 0) %></div>
        <div class="text-muted text-center">Celkové skóre</div>
      </div>
    </div>
    <div class="col-md-8">

  <div class="row mb-5">
    <div class="col-md-12">
      <h1 class="project-title"><%= @project.title %></h1>
      <p class="lead text-muted mt-4"><%= @project.description %></p>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-6">
      <h5>Náklady na projekt</h5>
      <p><%= @project.budget %></p>
    </div>

    <div class="col-md-6">
      <h5>Garant <%= help_icon_if_blank(@project.guarantor) %></h5>
      <p><%= @project.guarantor %></p>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <h5>Aktuálny stav projektu</h5>
      <p class="mb-4"><%= @project.status %></p>
    </div>
  </div>

  <div class="mt-5">
    <div class="row">
      <div class="col-md-10">
        <h2 id="hodnotenie" class="mb-0">Hodnotenie</h2>
      </div>
      <div class="col-md-2 text-left text-md-right edit-link-holder">
        <%= link_to "https://platforma.slovensko.digital/t/#{@project.project_id}", class: 'btn btn-lg btn-link pl-0 pl-md-3' do %>
          <%= fa_icon 'pencil', title: 'Upraviť hodnotenie' %>
        <% end %>
      </div>
    </div>
    <hr class="mt-0">

    <% @rating_types_by_phase.each do |rating_phase, rating_types| %>
      <div class="row mt-4 mb-1">
        <div class="col">
          <h5><%= rating_phase.name %></h5>
        </div>
      </div>
      <div class="row">
        <% rating_types.each do |rating_type| %>
          <% rating = @ratings_by_type[rating_type] %>
          <div class="col-md-3">
            <% if rating %>
              <%= rating_stars(rating) %>
              <p><%= rating_type.name %></p>
            <% else %>
              <div class="text-muted"><%= help_icon_if_blank(rating) %></div>
              <p class='text-muted'><%= rating_type.name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <h1 class="mb-5">Detailné hodnotenie projektu</h1>
    <%== @project.body_html %>
  </div>
</div>
