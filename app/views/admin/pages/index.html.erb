<h1>Admin</h1>

<div class="form-group">
  <%= button_to 'Synchronize', sync_admin_pages_path, class: 'btn btn-info btn-sm', method: :put %>
</div>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Status</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr id="<%= dom_id page %>">
        <td><%= page.id %></td>
        <td><%= page.title %></td>
        <td>
          <% if page.published? %>
            <% if page.synced? %>
              <span class="badge badge-success">published</span>
            <% else %>
              <span class="badge badge-danger">published</span>
            <% end %>
          <% else %>
            <span class="badge badge-secondary">unpublished</span>
          <% end %>
        </td>
        <td><%= l page.updated_at, format: '%F %T' %></td>
        <td>
          <% if page.published? %>
            <%= link_to 'Unpublish', '#', class: 'btn btn-secondary btn-sm' %>
          <% else %>
            <%= link_to 'Publish', '#', class: 'btn btn-info btn-sm' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages, views_prefix: 'admin' %>
