<h1>Admin</h1>

<div class="alert alert-warning">
  Preview of page <strong><%= @page.title %></strong>
  at <%= 'latest' if @page.latest_revision.version == @revision.version %>
  version <strong><%= @revision.version %></strong>.
  <%= link_to 'Go back', :back, class: 'alert-link float-right' %>
</div>

<% if @page.project.present? %>
  <%= render file: 'projects/show' %>
<% else %>
  <div class="container container-text">
    <%== @revision.body_html %>
  </div>
<% end %>
